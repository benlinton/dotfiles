#!/usr/bin/env bash
set -e

version() {
  echo "v0.0.1"
}

help() {
  echo "Usage: dotfiles [-hivu]"
  echo
  echo "  -h, --help        Display this help message"
  echo "  -i, --install     Symlink *.symlink files to $HOME"
  echo "  -v, --version     Display the version number"
  echo "  -u, --uninstall   Remove dotfile symlinks."
  echo
  echo "  For more information, see https://github.com/benlinton/dotfiles"
  echo
}

options=()
arguments=()
for arg in "$@"; do
  if [ "${arg:0:1}" = "-" ]; then
    if [ "${arg:1:1}" = "-" ]; then
      options[${#options[*]}]="${arg:2}"
    else
      index=1
      while option="${arg:$index:1}"; do
        [ -n "$option" ] || break
        options[${#options[*]}]="$option"
        let index+=1
      done
    fi
  else
    arguments[${#arguments[*]}]="$arg"
  fi
done

for option in "${options[@]}"; do
  case "$option" in
  "h" | "help" )
    help
    exit 0
    ;;
  "i" | "install" )
    command="dotfiles-install"
    ;;
  "u" | "uninstall" )
    command="dotfiles-uninstall"
    ;;
  "v" | "version" )
    version
    exit 0
    ;;
  * )
    help >&2
    exit 1
    ;;
  esac
done

if [ "${#options[@]}" -eq 0 ]; then
  help >&2
  exit 1
fi

exec "$command"
